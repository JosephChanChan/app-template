<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.byb.dao.system.UserMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.byb.model.entity.system.User">
        <id column="id" property="id" />
        <result column="user_name" property="userName" />
        <result column="login_name" property="loginName" />
        <result column="password" property="password" />
        <result column="salt" property="salt" />
        <result column="status" property="status" />
        <result column="create_time" property="createTime" />
    </resultMap>

    <resultMap id="userVo" type="com.byb.model.vo.system.UserVo">
        <id column="id" property="id" />
        <result column="user_name" property="userName" />
        <result column="login_name" property="loginName" />
        <result column="password" property="password" />
        <!--<result column="salt" property="salt" />-->
        <result column="status" property="status" />
        <result column="checkedRole" property="checkedRole" />
    </resultMap>


    <select id="relationUserList" resultMap="userVo">
        SELECT
        A.*
        FROM `user` AS A
        JOIN user_role AS D ON (A.id = D.user_id)
        WHERE D.role_id = #{roleId}
        ORDER BY A.id DESC
    </select>

    <select id="highLightUserByRole" resultMap="userVo">
        SELECT
        A.*,
        IF(D.role_id = #{roleId}, 1, 0) AS checkedRole
        FROM `user` AS A
        LEFT JOIN user_role AS D ON (A.id = D.user_id)
        ORDER BY A.id DESC
    </select>

    <update id="modifyUserPsd">
        update `user` set `password` = #{password} where id = #{userId}
    </update>


</mapper>
