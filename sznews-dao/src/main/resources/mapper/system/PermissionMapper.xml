<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.byb.dao.system.PermissionMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.byb.model.entity.system.Permission">
        <id column="id" property="id" />
        <result column="permission_name" property="permissionName" />
        <result column="permission_code" property="permissionCode" />
        <result column="url" property="url" />
    </resultMap>

    <!-- 通用查询映射结果 -->
    <resultMap id="permissionVo" type="com.byb.model.vo.system.PermissionVo">
        <id column="id" property="id" />
        <result column="permission_name" property="permissionName" />
        <result column="permission_code" property="permissionCode" />
        <result column="url" property="url" />
        <result column="checkedPermission" property="checkedPermission" />
    </resultMap>


    <select id="highLightPermissionByRole" resultMap="permissionVo">
        SELECT
        P.*,
        IF(RP.role_id = #{roleId}, 1, 0) AS checkedPermission
        FROM `permission` AS P
        LEFT JOIN role_permission AS RP ON (P.id = RP.permission_id)
        ORDER BY P.id DESC
    </select>

    <select id="selectByRoleId" resultMap="BaseResultMap">
        select p.* from permission p join role_permission rp on p.id = rp.permission_id and rp.role_id = #{roleId}
    </select>


</mapper>
