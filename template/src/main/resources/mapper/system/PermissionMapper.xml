<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.joseph.template.dao.PermissionMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.joseph.template.model.entity.Permission">
        <id column="id" property="id" />
        <result column="permission_name" property="permissionName" />
        <result column="permission_code" property="permissionCode" />
        <result column="url" property="url" />
    </resultMap>


    <select id="selectByRoleId" resultMap="BaseResultMap">
        select p.* from permission p join role_permission rp on p.id = rp.permission_id and rp.role_id = #{roleId}
    </select>


</mapper>
